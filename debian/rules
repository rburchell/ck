#!/usr/bin/make -f
# -*- makefile-mode -*-

#export DH_VERBOSE=1

docdir=/usr/share/maemo-doc/

configure: autogen.sh
	NOCONFIGURE=yes ./autogen.sh

Makefile: configure
	./configure --prefix /usr --sysconfdir=/etc --enable-gtk-doc

build: build-stamp
build-stamp: Makefile
	dh_testdir
	$(MAKE) all
	$(MAKE) doc/contextkit.html
	$(MAKE) doc/context.html
	touch build-stamp

clean: Makefile
	dh_testdir
	dh_testroot
	rm -f build-stamp 
	$(MAKE) distclean
	dh_clean

install:
install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	$(MAKE) DESTDIR=`pwd`/debian/tmp/ install
	mkdir -p `pwd`/debian/tmp/$(docdir)/org.freedesktop.ContextKit
	mkdir -p `pwd`/debian/tmp/$(docdir)/libcontextprovider
	mkdir -p `pwd`/debian/tmp/$(docdir)/context-properties
	cp -a doc/contextkit.html `pwd`/debian/tmp/$(docdir)/org.freedesktop.ContextKit/index.html
	cp -a doc/reference/libcontextprovider/html/* `pwd`/debian/tmp/$(docdir)/libcontextprovider/
	cp -a doc/context.html `pwd`/debian/tmp/$(docdir)/context-properties/

	dh_install --sourcedir=`pwd`/debian/tmp/

binary-indep: build install
	dh_testdir -i
	dh_testroot -i
	dh_installchangelogs -i
	dh_installdocs -i
	dh_installexamples -i
	dh_installman -i
	dh_link -i
	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary-arch: build install
	dh_testdir -a
	dh_testroot -a
	dh_installchangelogs -a
	dh_installdocs -a
	dh_installexamples -a
	dh_installmenu -a
	dh_installman -a
	dh_strip -a --dbg-package="contextkit-dbg"
	dh_link -a
	dh_compress -a
	dh_fixperms -a
	dh_makeshlibs -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
